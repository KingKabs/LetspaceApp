<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dashboard_bg"
    android:orientation="vertical"
    tools:context=".LandlordStatsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="🏠 Landlord Overview"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:textStyle="bold"
                android:fontFamily="sans-serif-medium"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="20dp" />

            <!-- Row 1 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_marginBottom="16dp">

                <!-- Total Properties -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTotalProperties"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/card_lease"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_house_24"
                            app:tint="@color/dashboard_text_strong"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/tvTotalProperties"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="@color/dashboard_text_strong"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Properties"
                            android:textColor="@color/dashboard_text_strong"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Total Tenants -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardTotalTenants"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/card_deposit"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_person_24"
                            app:tint="@color/dashboard_text_strong"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/tvTotalTenants"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="32sp"
                            android:textColor="@color/dashboard_text_strong"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tenants"
                            android:textColor="@color/dashboard_text_strong"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <!-- Row 2 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <!-- Collectable Rent -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardCollectableRent"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/card_billing"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/outline_payments_24"
                            app:tint="@color/dashboard_text_strong"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/tvCollectableRent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="KSh 0"
                            android:textSize="24sp"
                            android:textColor="@color/dashboard_text_strong"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Collectable Rent"
                            android:textColor="@color/dashboard_text_strong"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Occupancy Rate -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardOccupancyRate"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/card_lease"
                    app:cardCornerRadius="18dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="14dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:src="@drawable/baseline_home_repair_service_24"
                            app:tint="@color/dashboard_text_strong"
                            android:layout_marginBottom="10dp" />

                        <TextView
                            android:id="@+id/tvOccupancyRate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textSize="28sp"
                            android:textColor="@color/dashboard_text_strong"
                            android:textStyle="bold"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Occupancy Rate"
                            android:textColor="@color/dashboard_text_strong"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
