<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:padding="16dp"
    android:radius="12dp"
    android:backgroundTint="@color/white"
    android:elevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvReportMonth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="January"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/dashboard_title"/>

        <TextView
            android:id="@+id/tvReportUnits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Units: 12"
            android:textSize="14sp"
            android:textColor="@color/dashboard_value"
            android:layout_marginTop="4dp"/>

        <TextView
            android:id="@+id/tvReportRent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total Rent: $2400"
            android:textSize="14sp"
            android:textColor="@color/dashboard_value"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tvReportOccupancy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Occupancy: 90%"
            android:textSize="14sp"
            android:textColor="@color/dashboard_value"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

</androidx.cardview.widget.CardView>
