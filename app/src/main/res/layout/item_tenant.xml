<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Tenant Name -->
        <TextView
            android:id="@+id/tvTenantName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="John Doe"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#1B1F3B"
            android:fontFamily="sans-serif-medium" />

        <View
            android:layout_width="40dp"
            android:layout_height="2dp"
            android:layout_marginTop="6dp"
            android:background="@color/teal_700" />

        <!-- Unit -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_house_24"
                app:tint="#4A5568"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvTenantUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit: A1"
                android:textColor="#4A5568"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Property -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/baseline_other_houses_24"
                app:tint="#4A5568"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvTenantProperty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Property: Neema Apartments"
                android:textColor="#4A5568"
                android:textSize="14sp" />
        </LinearLayout>

        <!-- Contact -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="4dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/outline_phone_enabled_24"
                app:tint="#4A5568"
                android:layout_marginEnd="6dp" />

            <TextView
                android:id="@+id/tvTenantContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contact: 0722 123 456"
                android:textColor="#4A5568"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
